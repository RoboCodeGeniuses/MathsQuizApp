<MainScreen>:
    name: "mainscrn"
    MDBoxLayout:
        orientation: "vertical"
        padding: 5
        spacing: 10
        MDRectangleFlatButton:
            id: title
            md_bg_color: [0.16, 0.16, 0.61, 1]
            text: "Maths Quiz For Kids"
            text_color: [1, 1, 1, 1]
            font_size: "32dp"
            size_hint: (1, 0.1)
        MDRectangleFlatButton:
            id: score
            md_bg_color: [1, 0.48, 0, 1]
            text: "Score: 0.00%"
            text_color: [1, 1, 1, 1]
            font_size: "32dp"
            size_hint: (1, 0.1)
        MDRectangleFlatButton:
            id: add
            md_bg_color: [1, 0.33, 0.15, 1]
            text: "Addition"
            text_color: [1, 1, 1, 1]
            font_size: "28dp"
            size_hint: (1, 0.1)
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "addscrn"
                app.clarification_random()
        MDRectangleFlatButton:
            id: sub
            md_bg_color: [0.4, 0, 1, 1]
            text: "Subtraction"
            text_color: [1, 1, 1, 1]
            font_size: "28dp"
            size_hint: (1, 0.1)
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "subscrn"
                app.clarification_random()
        MDRectangleFlatButton:
            id: multiply
            md_bg_color: [1, 0.78, 0, 1]
            text: "Multiplication"
            text_color: [1, 1, 1, 1]
            font_size: "28dp"
            size_hint: (1, 0.1)
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "mulscrn"
                app.clarification_random()
        MDRectangleFlatButton:
            id: division
            md_bg_color: [0.14, 0.78, 0.14, 1]
            text: "Division"
            text_color: [1, 1, 1, 1]
            font_size: "28dp"
            size_hint: (1, 0.1)
            on_press:
                app.root.transition.direction = "left"
                app.root.current = "divscrn"
                app.clarification_random()
